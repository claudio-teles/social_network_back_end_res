<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <!-- Hibernate SQL dialect org.hibernate.dialect.MariaDBDialect |> 5.28 
			org.hibernate.dialect.MariaDB53Dialect | org.hibernate.dialect.MySQL5Dialect -->

  <property name="hibernate.dialect">org.hibernate.dialect.MariaDB103Dialect</property>
  <!-- Database connection settings -->
  <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
  <property name="hibernate.connection.username">claudio</property>
  <property name="hibernate.connection.password">MariaDB[2]}{</property>
  <!-- ?serverTimezone=UTC -->
  <property name="hibernate.connection.url">jdbc:mariadb://localhost:3307/mariadb</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <!-- Show SQL queries -->
  <property name="show_sql">true</property>
  <!-- Format SQL queries -->
  <property name="hibernate.use_identifier_rollback">true</property>
  <property name="hibernate.format_sql">true</property>
  
 </session-factory>
</hibernate-configuration>